<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AudioReplaceActivity">
    <Button
        android:layout_marginTop="@dimen/common_margin_20"
        android:id="@+id/bt_compose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_20"
        android:text="合成音频"
        android:background="@color/color_ABB5BC"/>
    <Button
        android:layout_marginTop="@dimen/common_margin_20"
        android:id="@+id/bt_despetate"
        app:layout_constraintTop_toBottomOf="@+id/bt_compose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_20"
        android:text="分离mp4"
        android:background="@color/color_ABB5BC"/>
    <Button
        android:layout_marginTop="@dimen/common_margin_20"
        android:id="@+id/bt_compsevideo"
        app:layout_constraintTop_toBottomOf="@+id/bt_despetate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_20"
        android:text="合成mp4"
        android:background="@color/color_ABB5BC"/>

</android.support.constraint.ConstraintLayout>