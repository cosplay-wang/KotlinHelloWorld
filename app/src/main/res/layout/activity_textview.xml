<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TextviewActivity">
    <TextView
        android:ellipsize="end"
        android:maxLength="20"
        android:textSize="15sp"
        android:text="@string/textview_show"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/tv_max_length"/>
    <TextView
        android:ellipsize="end"
        android:maxEms="20"
        android:textSize="15sp"
        android:text="@string/textview_show"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/tv_max_length"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/tv_max_ems"/>

    <TextView
        android:ellipsize="end"
        android:textSize="15sp"
        android:maxLines="1"
        android:maxWidth="150dp"
        android:text="@string/textview_show"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/tv_max_ems"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/tv_max_windth"/>

</android.support.constraint.ConstraintLayout>