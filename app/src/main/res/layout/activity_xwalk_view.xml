<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cosplay.kotlin.hw.ui.activity.XwalkViewActivity">
    <Button
        android:visibility="gone"
        style="@style/FragmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_na2js"
        android:text="@string/native_2_js"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <org.xwalk.core.XWalkView
        android:background="@color/radio_no_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/xwv_webview"
        app:layout_constraintTop_toBottomOf="@id/bt_na2js"
        app:layout_constraintLeft_toLeftOf="parent"></org.xwalk.core.XWalkView>
    <ImageView
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
