<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#963258"
    >

    <LinearLayout
        android:id="@+id/ll_item_pk_detail"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_item_pk_detail_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/item_finish"
            android:gravity="center"
            android:text="@string/item_pk_detail_finish"
            android:textColor="#fff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_vs_item_pk_detail_finish"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="vs"
            android:textColor="#b0b0b0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_oopo_item_pk_detail_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/item_finish"
            android:gravity="center"
            android:text="@string/item_pk_detail_finish"
            android:textColor="#fff"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="you are gonna be a werth academie graduate"
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ll_item_pk_detail" />
</RelativeLayout>
